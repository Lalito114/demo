<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puntada.Redimir.BalanceProductos">

    <ListView
        android:id="@+id/list"
        android:layout_width="278dp"
        android:layout_height="251dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/cajadetextopuntada" />

    <Button
        android:id="@+id/btnAgregarProducto"
        android:layout_width="167dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fondoazulpuntada"
        android:text=" agregar producto"
        android:textColor="@color/a_normal" />

    <EditText
        android:id="@+id/edtPesos"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/cajadetextopuntada"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="0.00"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txtLitros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="67dp"
        android:text="Litros: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtLitros"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/cajadetextopuntada"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="0.00"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txtPesos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="65dp"
        android:text="Pesos: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEnviarProducto"
        android:layout_width="101dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/fondoazulpuntada"
        android:text="Enviar"
        android:textColor="@color/a_normal" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="537dp"
        android:text="PUNTOS DISPOBLES EN TARJETA"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSaldos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="504dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="265dp"
        android:layout_marginBottom="466dp"
        android:text="Cantidad"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnIncrementar"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="462dp"
        android:background="@drawable/fondoazulpuntada"
        android:text="+"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edtCantidadProducto"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="460dp"
        android:background="@drawable/cajadetextopuntada"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="1" />

    <Button
        android:id="@+id/btnDecrementar"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="462dp"
        android:background="@drawable/fondoazulpuntada"
        android:text="-"
        android:textColor="@color/a_normal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="265dp"
        android:layout_marginBottom="420dp"
        android:text="Producto"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnBuscar"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="415dp"
        android:background="@drawable/cajadetextopuntada"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/edtProductoId"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="414dp"
        android:background="@drawable/cajadetextopuntada"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/btnScanner"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="415dp"
        android:background="@drawable/cajadetextopuntada"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/btnCombustibles"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="362dp"
        android:background="@drawable/fondoazulpuntada"
        android:text="COMBUSTIBLES"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnAceites"
        android:layout_width="131dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="362dp"
        android:background="@drawable/fondoazulpuntada"
        android:text="ACEITES"
        android:textColor="#FFFFFF" />

</RelativeLayout>