<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Cortes2.CierreFormaPago"
    >

    <TextView
        android:id="@+id/txtTotalPicos"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="TOTAL PICOS:"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMorrallita"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="177dp"
        android:text="MORRALLITA:"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edtMorrallita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtMorrallita"
        android:layout_marginTop="1dp"
        android:hint="00.00"
        android:maxLength="6"
        android:textSize="18dp"
        android:textAlignment="center"
        android:keyboardNavigationCluster="true"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/txtGastos"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="73dp"
        android:text="GASTOS: "
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/txtSubtotalOficina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBTOTAL OFICINA: "
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/aceptarSubtotalOficina"
            android:layout_width="216dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:background="@drawable/b3"
            android:text="ACEPTAR"
            android:textColor="@color/colorWhite"
            />

    </LinearLayout>



</RelativeLayout>
